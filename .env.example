# Пример файла переменных окружения для Docker
# Скопируйте этот файл как .env и настройте под свои нужды

# База данных
DATABASE_TYPE=sqlite
DATABASE_NAME=real_skud_data.db

# Директории
INPUT_DIR=real_data_input
BACKUP_DIR=processed_real_skud
LOG_DIR=logs

# Мониторинг
MONITORING_ENABLED=true
CHECK_INTERVAL=60

# Логирование
LOG_LEVEL=INFO

# Веб-интерфейс (если нужен)
# WEB_PORT=8000
# WEB_HOST=0.0.0.0

# PostgreSQL (если используется вместо SQLite)
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=skud_db
# POSTGRES_USER=skud_user
# POSTGRES_PASSWORD=your_password_here